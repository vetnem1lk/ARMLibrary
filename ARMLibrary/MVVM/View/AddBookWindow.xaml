<Window x:Class="ARMLibrary.MVVM.View.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:ARMLibrary.MVVM.View"
        mc:Ignorable="d"
        Height="500" Width="450"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        FontFamily="Fonts/#Poppins">
    <Grid 

          >
        <Border CornerRadius="15"
            Background="White"
                BorderThickness="10">

            <Border.Effect >
                <BlurEffect Radius="10"/>
            </Border.Effect>
        </Border>
        <Border CornerRadius="15"
                BorderThickness="10"
                Margin="1"
                Background="#272537">
            <Grid>
                <StackPanel Height="30"                      
                        VerticalAlignment="Top" 
                        Background="Transparent"
                        MouseDown="ToolBart_MouseDown">
                <Image Name="ExBtn"
                       HorizontalAlignment="Right"
                       Height="25" 
                       Width="25" 
                       Margin="0,5,10,0" MouseLeftButtonDown="ExBtn_MLBDown" 
                       >
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="/Images/reject.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=ExBtn}"
                                             Value="True">
                                    <Setter Property="Source" Value="/Images/OnReject.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Add a book"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,10,0,0"
                           Foreground="White"
                           FontSize="22"/>
                    
                        <TextBox x:Name="nameBook"
                             Width="400"
                             Height="40"
                             Margin="0,25,0,0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Style="{StaticResource ModernTextox}"
                     />
                        
                    
                    
                    <TextBox  x:Name="authorName"
                     Width="400"
                     Height="40"
                     Margin="0,25,0,0"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Style="{StaticResource ModernTextox}"/>
                    <TextBox  x:Name="seriesName"
                     Width="400"
                     Height="40"
                     Margin="0,25,0,0"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Style="{StaticResource ModernTextox}"/>
                    
                    <DatePicker SelectedDateFormat="Short" 
                                Width="200"
                                HorizontalAlignment="Left"
                     Margin="10,25,0,0"
                                Background="#353340"
                                SelectedDate="1/01/22"
                  FirstDayOfWeek="Monday"
                                />
                </StackPanel>
            </Grid>


        </Border>
    </Grid>
    
    
</Window>
